{
	"compilerOptions": {
		"target": "esNext",
		"module": "CommonJS",
		"lib": ["es6", "es2015", "dom"],
		"declaration": true,
		"sourceMap": true,
		"outDir": "bin",
		"rootDir": "src",
		"strict": true,
		"types": ["node", "validator"],
		"esModuleInterop": true,
		"noEmit": false,
		"resolveJsonModule": true,
		"baseUrl": "src",
		"skipLibCheck": true
	}
}
